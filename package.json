{
    "name": "doctor-healthcare-app",
    "version": "1.0.0",
    "description": "Complete healthcare management system",
    "private": true,
    "workspaces": [
        "frontend",
        "admin",
        "backend"
    ],
    "scripts": {
        "install-all": "npm install && npm install --workspace=frontend && npm install --workspace=admin && npm install --workspace=backend",
        "dev:frontend": "npm run dev --workspace=frontend",
        "dev:admin": "npm run dev --workspace=admin",
        "dev:backend": "npm run dev --workspace=backend",
        "build:frontend": "npm run build --workspace=frontend",
        "build:admin": "npm run build --workspace=admin",
        "start:backend": "npm run start --workspace=backend",
        "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:admin\"",
        "deploy:frontend": "cd frontend && vercel --prod",
        "deploy:admin": "cd admin && vercel --prod"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "keywords": [
        "healthcare",
        "doctor",
        "appointment",
        "react",
        "nodejs"
    ],
    "author": "Your Name",
    "license": "MIT"
}